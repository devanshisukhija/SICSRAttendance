<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devanshisukhija.sicsrattendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Controller.FacultyWrap.Faculty_HomeActivity"
            android:label="@string/title_activity_faculty__home"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Controller.StudentWrap.Student_homeActivity"
            android:label="@string/title_activity_student_home"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Controller.FacultyWrap.Faculty_RecordActivity"
            android:label="@string/title_activity_faculty__record"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.FacultyWrap.Faculty_LectureActivity"
            android:label="@string/title_activity_faculty__lecture"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.StudentWrap.Student_LectureActivity"
            android:label="@string/title_activity_student__lecture"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Controller.StudentWrap.Student_ReportActivity"
            android:label="@string/title_activity_student__report"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.FacultyWrap.Faculty_LectureActivity2"
            android:label="@string/title_activity_faculty__lecture2"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.StudentWrap.Student_LectureActivity2"
            android:label="@string/title_activity_student__lecture2"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>