<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.devanshisukhija.sicsrattendance.Controller.FacultyWrap.Faculty_RecordActivity"
        tools:showIn="@layout/app_bar_faculty__record">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="TextView" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:fontFamily="@font/open_sans_bold"
        android:paddingLeft="15dp"
        android:text="Time Remaining "
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/faculty_timer"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:background="@drawable/side_nav_bar"
        android:fontFamily="@font/open_sans"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="145sp"
        android:visibility="visible"
        tools:text="00:00" />

    <TextView
        android:id="@+id/facutly_record_display_lectureInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:fontFamily="@font/open_sans_bold"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Introduction to Python" />

    <Button
        android:id="@+id/faculty_record_endBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@android:dimen/thumbnail_width"
        android:layout_marginTop="@dimen/cast_expanded_controller_margin_between_seek_bar_and_control_buttons"
        android:background="@drawable/timer_toggle"
        android:onClick="record_end_lectureBtn_clicked"
        android:text="End Lecture" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            android:text="Today's Lecture's Learning Objective:"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="30sp" />

    <EditText
        android:layout_margin="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/learning_obj_background"
        android:id="@+id/faculty_record_LrnObj"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:ems="10"
        android:padding="10dp"
        android:hint="Enter Learning Objective."
        android:textAlignment="textStart"
        tools:text="Today's Learning Objective" />

    <Button
        android:layout_margin="15dp"
        android:id="@+id/faculty_record_save_LrnObjBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_color_custom"
        android:onClick="faculty_record_save_LrnObjBtn_clicked"
        android:text="Save "
        android:textAlignment="gravity"
        android:textColor="@color/sicsrYellow"
        android:textSize="20sp" />

    </LinearLayout>
</ScrollView>

